<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/a"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/noteTitle"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#999999" />

            <EditText
                android:id="@+id/TitleEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/titleHint"
                android:textColor="@android:color/background_light"
                tools:textColorHint="@android:color/darker_gray">

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/noteContent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/darker_gray" />

            <EditText
                android:id="@+id/ContentEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="15"
                android:textColor="@android:color/white"></EditText>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/addNoteToDB"
        android:layout_width="fill_parent"
        android:layout_height="59dp"
        android:text="@string/saveNoteButton" />

</LinearLayout>